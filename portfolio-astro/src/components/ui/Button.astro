---
const { as = 'button', href = '#', variant = 'primary' } = Astro.props;
---
{as === 'a' ? (
  <a class={`btn ${variant}`} href={href}><slot /></a>
) : (
  <button class={`btn ${variant}`}><slot /></button>
)}
<style>
.btn { display:inline-flex; align-items:center; gap:.4rem; padding:.6rem 1rem; border-radius:.7rem; border:1px solid var(--color-border, rgba(0,0,0,.1)); }
.btn.primary { background: color-mix(in oklab, var(--color-accent, #6750a4) 15%, white); }
</style>